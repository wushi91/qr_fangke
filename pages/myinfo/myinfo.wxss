/* pages/myinfo/myinfo.wxss */

.user-info-wrapper{
  background-color: #2E8AE6;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-info-wrapper .header-image{
  margin-top: 30rpx;
  
  border-radius: 50%;
  width: 160rpx;
  height: 160rpx;
}

.user-info-wrapper .username{
  margin-top: 20rpx;
  font-size:34rpx;
  color:rgba(255,255,255,1);
  line-height:48rpx;
  margin-bottom: 30rpx;
}


.user-item-wrapper{
  margin-top: 30rpx;
}

.user-item-wrapper button.user-item{
  background-color: white;
  width: 100%;
  text-align: left;
  padding: 0;
  border: none;
  border-radius: 0rpx;
}


.user-item-wrapper button.user-item::after{
  border: none;
}

.user-item .user-item-title{
  
  display: inline-block;
  margin-left: 30rpx;
  margin-top: 20rpx;
margin-bottom: 20rpx;
font-size:34rpx;
color:rgba(0,0,0,1);
line-height:48rpx;

}

.user-item .user-item-icon{
  margin-top: 14rpx;
  margin-right: 12rpx;
  width: 60rpx;
  height: 60rpx;
  float: right;
}
html,page{
 min-height:  100%;
 display: flex;
} 
.container{
  flex: 1;
  background: #F2F2F5;
}



button.main-button{
  width: 480rpx;
  background-color: #2E8AE6;
  padding: 23rpx 0rpx;
  font-size:34rpx;
  color:rgba(255,255,255,1);
  line-height:48rpx;
  border-radius: 10rpx 
}

button.main-button:active{
  background-color: rgb(41, 123, 206);
}

button.main-button.disabled{
  background-color: rgb(172, 209, 245);
  color:rgba(255,255,255,1);
}


/*自定义的tobtab  */
.tob-tab{
  z-index: 100;
  position: fixed;
  width: 100%;
  background-color: #F7F7FA;
  display: flex;
  border-bottom: 1px solid #E3E3E6;
}
.tob-tab .tob-tab-item{
  flex: 1;
  text-align: center;
}

.tob-tab .tob-tab-item text{
  box-sizing: border-box;
  display: inline-block;
  padding: 27rpx 40rpx;
  font-size:28rpx;
  color:rgba(53,53,53,1);
  line-height:40rpx;
  border-bottom: 4rpx solid rgba(0,0,0,0);
}

.tob-tab .tob-tab-item-select text{
  color: #2E8AE6;
  border-bottom:  4rpx solid #2E8AE6; 
}

